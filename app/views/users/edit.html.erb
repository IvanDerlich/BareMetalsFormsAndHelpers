<%= form_for @user do |f| %>
    <%= f.label :username, "Gimme your user name" %><br><br>
    <%= f.text_field :username %><br><br>

    <%= f.label :email,'Insert your email, bro' %><br><br>
    <%= f.text_field :email, placeholder: "placeholder text" %><br><br>

    <%= f.label :password %><br><br>
    <%= f.password_field :password %><br><br>

    <%= f.submit %>
<% end %>